<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ArdaPU" transaction-type="JTA">
    <jta-data-source>jdbcMySql</jta-data-source>
    <class>br.com.ardaexperience.entidade.Pagina</class>
    <class>br.com.ardaexperience.entidade.Contato</class>
    <class>br.com.ardaexperience.entidade.CartaoCredito</class>
    <class>br.com.ardaexperience.entidade.Roteiro</class>
    <class>br.com.ardaexperience.entidade.Card</class>
    <class>br.com.ardaexperience.entidade.Endereco</class>
    <class>br.com.ardaexperience.entidade.Cliente</class>
    <class>br.com.ardaexperience.entidade.Usuario</class>
    <class>br.com.ardaexperience.entidade.DetalhesPedido</class>
    <class>br.com.ardaexperience.entidade.DetalhesRoteiro</class>
    <class>br.com.ardaexperience.entidade.Pedido</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
